<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>

        <div class="form">
            <form action="/create" method="post">
                <input class="title-block" type="text" placeholder="Title goes here.." name="title">
                <textarea class="task-area resize-none" name="details" placeholder="Write your task here" ></textarea>
                <div class="input-div">
                    <input class="create" type="submit" value="Create Task">
                </div>
            </form>
            
        </div>

    <div class="tasks">
        <% if(files.length >0){ %>
        <% files.forEach((val) => { %>
            <div class="task">
                <h1><%= val %></h1>
                <div class="ancher">
                    <a href="/files/<%= val %>" class="read-me">READ MORE.</a> 
                    <a class="text-zinc-600 edit" href="/edit/<%= val %>">edit filename</a>
                </div>
            </div>
        <% }); %>
        <% }else{ %>
            <h3 style="color: rgb(147, 121, 125);">No tasks yet</h3>
            <% } %>            
    </div>
    
</body>
</html>